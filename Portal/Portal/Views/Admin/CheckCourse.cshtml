@model List<Portal.Models.Cours>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Courses</h2>

<a href="/Admin/CreateCourse" class="btn btn-default">Create New Course</a>

<form action="/Admin/CheckCourse" method="post" class="search-box">

    <input class="form-control" type="text" name="searchcourse" value="" placeholder="Search Course by Name">
    <input class="btn btn-primary" type="submit" value="Search" />


</form>


<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Department</th>
        <th>Section</th>
        <th>Time</th>
        <th></th>
    </tr>
    @foreach (var c in Model)
    {
<tr>
    <td>@c.id</td>
    <td>@c.name</td>
    <td>@c.department</td>
    <td>@c.section</td>
    <td>@c.time</td>
    <td>
        <a href="/Admin/CheckCourseDetails/@c.id" class="btn btn-default">Details</a>
        <a href="/Admin/EditCourse/@c.id" class="btn btn-success">Edit</a>
        <a href="/Admin/DeleteCourse/@c.id" class="btn btn-danger">Delete</a>
    </td>


</tr>
    }

</table>
