@model Portal.Models.Request
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "DeleteNotice";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Request</h2>
    <h3>Do you want to approve Request for @Model.coursename?</h3>
    <h4>Request Details</h4>
    <h5>Course Name: @Model.coursename</h5>
    <h5>Department: @Model.department</h5>
    <hr/>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <input type="hidden" name="coursename" value="@Model.coursename" />

    <input type="hidden" name="department" value="@Model.department" />

    <input type="hidden" name="status" value="@Model.status" />

    <input type="hidden" name="userid" value="@Model.userid" />

    <div class="form-group">
        <div>
            
                <input type="submit" value="Yes" class="btn btn-success" />
                <a href="/Admin/CheckRequests/" class="btn btn-default">Go Back</a>
        </div>
    </div>
</div>
}
