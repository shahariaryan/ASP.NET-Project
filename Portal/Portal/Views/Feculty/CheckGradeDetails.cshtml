@model Portal.Models.User
@{
    Layout = "~/Views/Shared/_FecultyLayout.cshtml";
    ViewBag.Title = "Details";
}


<h4>Graded Students</h4>

<table class="table table-bordered">
    <tr>
        <td>Student Id</td>
        <td>Student Name</td>
        <td>Course Name</td>
        <td>Department</td>
        <td>Grade</td>
    </tr>
    @foreach (var ms in Model.Marks)
    {
<tr>
    <td>@Model.uid</td>
    <td>@Model.name</td>
    <td>@ms.coursename</td>
    <td>@ms.department</td>
    <td>@ms.grade</td>

</tr>
    }
</table>
