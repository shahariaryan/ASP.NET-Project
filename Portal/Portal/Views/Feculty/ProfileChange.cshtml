@model Portal.Models.User


@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_FecultyLayout.cshtml";
}


<h2>My Profile</h2>
<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            User ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.uid)
        </dd>

        <dt>
           Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
           Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
           Department
        </dt>

        <dd>
            @Html.DisplayFor(model => model.department)
        </dd>

        <dt>
           Password
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            User Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.type)
        </dd>


    </dl>
</div>
<p>
    <a href="/Feculty/UpdateProfile/@Model.userid" class="btn btn-success">Update Profile</a>
    <a href="/Feculty/Home/" class="btn btn-default">Go Back</a>
</p>
